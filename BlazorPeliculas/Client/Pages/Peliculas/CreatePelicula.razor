@page "/peliculas/crear"
@inject NavigationManager navegation

<h3>CreatePelicula</h3>


<FormularioPelicula Pelicula="Pelicula" OnValidSubmit="Crear" GenerosNoSeleccionados="GenerosNoSeleccionados"></FormularioPelicula>
@code {

    private Pelicula Pelicula = new Pelicula();
    private List<Genero> GenerosNoSeleccionados = new List<Genero>();

    protected override void OnInitialized()
    {
        GenerosNoSeleccionados = new List<Genero>()
        {
            new Genero(){Id = 1, Nombre = "Comedia"},
            new Genero(){Id = 2, Nombre = "Drama"},
            new Genero(){Id = 3, Nombre = "Acción"},
            new Genero(){Id = 4, Nombre = "Sci-fi"}
        };
    }
    void Crear()
    {
        Console.WriteLine(navegation.Uri);
        navegation.NavigateTo("/pelicula/1");
    }
}
