
<EditForm Model="Persona" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Nombre:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Persona.Nombre" />
            <ValidationMessage For="@(() => Persona.Nombre)" />
        </div>
    </div>
    <div class="form-group">
        <label>Fecha Nacimiento:</label>
        <div>
            <InputDate class="form-control" @bind-Value="@Persona.FechaNacimiento" />
            <ValidationMessage For="@(() => Persona.FechaNacimiento)" />
        </div>
    </div>

    <div class="form-group">
        <InputImg Label="Foto" SeleccionarImagen="SeleccionarFoto" ImagenURL="@imagenURL" />
    </div>

    <div class="form-group form-markdown">
        <InputMarkdown @bind-Value="@Persona.Biografia"
                       For="@(() => Persona.Biografia)"
                       Label="Biografía" />
    </div>

    <button class="btn btn-success" type="submit">Guardar Cambios</button>
</EditForm>
@code {

    [Parameter] public Persona Persona { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    //La imagen Seleccionada en el componente
    private string imagenURL;


    protected override void OnInitialized()
    {
        //Si al iniciar el Formulario Trae Foto,"Edición" entonces la envía.
        if (!string.IsNullOrWhiteSpace(Persona.Foto))
        {
            imagenURL = Persona.Foto;
            Persona.Foto = null;
        }
    }

    private void SeleccionarFoto(string imagenBase64)
    {
        Persona.Foto = imagenBase64;
        imagenURL = null;
    }
}
